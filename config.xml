<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.mha.holdon" version="1.0.0.0">

	<name>HOLD ON</name>
	<description>HOLD ON</description>
	<author href="http://mhadev.azurewebsites.net/" email="mhadev@outlook.com">MHA</author>

	<icon src="icon-128.png" width="128" height="128" />
	<icon src="icon-256.png" width="256" height="256" gap:role="default" />

	<preference name="permissions" value="none"/>
	<preference name="android-targetSdkVersion" value="21" />

	<feature name="http://api.phonegap.com/1.0/network"/>

	<preference name="orientation" value="default" />
	<preference name="fullscreen" value="true" />
	<gap:config-file platform="ios" parent="UIStatusBarHidden"><true/></gap:config-file>
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance"><false/></gap:config-file>

	<preference name="deployment-target" value="8.0" />
	<preference name="android-minSdkVersion" value="21" />
	<preference name="target-device" value="universal" />

	<gap:plugin name="https://github.com/cranberrygame/com.cranberrygame.phonegap.plugin.ad.admob#5155223fd774252be3a0f8cd7be3a94992ca995e" />
	<gap:plugin name="org.apache.cordova.inappbrowser" />

	<!-- Optional splash screen image, e.g.: -->
	<!-- <gap:splash src="splash.png" width="1024" height="768" /> -->

</widget>